{
    "$schema": "https://raw.githubusercontent.com/cavi-au/Consent-O-Matic/master/rules.schema.json",
    "setupad": {
        "detectors": [
            {
                "presentMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": ".stpd_cmp_wrapper"
                        }
                    }
                ]
            }
        ],
        "methods": [
            {
                "name": "HIDE_CMP"
            },
            {
                "action": {
                    "type": "click",
                    "target": {
                        "selector": "button.stpd_submit_btn"
                    },
                    "parent": {
                        "selector": ".stpd_button_wrapper"
                    }
                },
                "name": "OPEN_OPTIONS"
            },
            {
                "action": {
                    "type": "list",
                    "actions": [
                        {
                            "type": "waitcss",
                            "target": {
                                "selector": ".stpd_vendor_list_btn"
                            },
                            "retries": 3,
                            "waitTime": 250
                        },
                        {
                            "type": "foreach",
                            "target": {
                                "selector": "label.stpd_switch"
                            },
                            "action": {
                                "type": "click",
                                "target": {
                                    "selector": "input[type=checkbox]:checked"
                                }
                            }
                        }
                    ]
                },
                "name": "DO_CONSENT"
            },
            {
                "action": {
                    "type": "click",
                    "target": {
                        "selector": "button.stpd_submit_btn",
                        "textFilter": [
                            "Confirm choices"
                        ]
                    }
                },
                "name": "SAVE_CONSENT"
            },
            {
                "name": "UTILITY"
            }
        ]
    }
}