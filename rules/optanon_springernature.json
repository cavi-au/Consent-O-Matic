{
    "$schema": "https://raw.githubusercontent.com/cavi-au/Consent-O-Matic/master/rules.schema.json",
    "optanon_springernature": {
        "detectors": [
            {
                "presentMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": ".cc-banner--is-tcf"
                        }
                    }
                ],
                "showingMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": ".cc-banner--is-tcf"
                        }
                    }
                ]
            }
        ],
        "methods": [
            {
                "action": {
                    "type": "hide",
                    "target": {
                        "selector": ".cc-banner--is-tcf"
                    }
                },
                "name": "HIDE_CMP"
            },
            {
                "action": {
                    "type": "click",
                    "target": {
                        "selector": ".cc-banner__button-preferences"
                    }
                },
                "name": "OPEN_OPTIONS"
            },
            {
                "action": {
                    "type": "foreach",
                    "target": {
                        "selector": ".cc-preferences__body"
                    },
                    "action": {
                        "type": "list",
                        "actions": [
                            {
                                "type": "ifcss",
                                "target": {
                                    "selector": ".cc-preferences__category-heading",
                                    "textFilter": [
                                        "Cookies that measure website use"
                                    ]
                                },
                                "trueAction": {
                                    "type": "consent",
                                    "consents": [
                                        {
                                            "matcher": {
                                                "type": "css",
                                                "target": {
                                                    "selector": ".cc-switch__input"
                                                }
                                            },
                                            "trueAction": {
                                                "type": "click",
                                                "target": {
                                                    "selector": ".cc-switch__input[checked=\"true\"]"
                                                }
                                            },
                                            "falseAction": {
                                                "type": "click",
                                                "target": {
                                                    "selector": ".cc-switch__input[checked=\"false\"]"
                                                }
                                            },
                                            "type": "B"
                                        }
                                    ]
                                }
                            },
                            {
                                "type": "ifcss",
                                "target": {
                                    "selector": ".cc-preferences__category-heading",
                                    "textFilter": [
                                        "Cookies that help with our communications and marketing"
                                    ]
                                },
                                "trueAction": {
                                    "type": "consent",
                                    "consents": [
                                        {
                                            "matcher": {
                                                "type": "css",
                                                "target": {
                                                    "selector": ".cc-switch__input"
                                                }
                                            },
                                            "trueAction": {
                                                "type": "click",
                                                "target": {
                                                    "selector": ".cc-switch__input[checked=\"true\"]"
                                                }
                                            },
                                            "falseAction": {
                                                "type": "click",
                                                "target": {
                                                    "selector": ".cc-switch__input[checked=\"false\"]"
                                                }
                                            },
                                            "type": "F"
                                        }
                                    ]
                                }
                            },
                            {
                                "type": "ifcss",
                                "target": {
                                    "selector": ".cc-preferences__category-heading",
                                    "textFilter": [
                                        "Cookies that help show personalised advertising"
                                    ]
                                },
                                "trueAction": {
                                    "type": "consent",
                                    "consents": [
                                        {
                                            "matcher": {
                                                "type": "css",
                                                "target": {
                                                    "selector": ".cc-switch__input"
                                                }
                                            },
                                            "trueAction": {
                                                "type": "click",
                                                "target": {
                                                    "selector": ".cc-switch__input[checked=\"true\"]"
                                                }
                                            },
                                            "falseAction": {
                                                "type": "click",
                                                "target": {
                                                    "selector": ".cc-switch__input[checked=\"false\"]"
                                                }
                                            },
                                            "type": "F"
                                        }
                                    ]
                                }
                            }
                        ]
                    }
                },
                "name": "DO_CONSENT"
            },
            {
                "action": {
                    "type": "click",
                    "target": {
                        "selector": ".cc-button[data-cc-action=\"save\"]"
                    }
                },
                "name": "SAVE_CONSENT"
            },
            {
                "name": "UTILITY"
            }
        ]
    }
}
