{
    "$schema": "https://raw.githubusercontent.com/cavi-au/Consent-O-Matic/master/rules.schema.json",
    "zizzi": {
        "detectors": [
            {
                "presentMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": "#CI-consent-popup"
                        }
                    }
                ],
                "showingMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": ".cookies-modal__sidebar",
                            "displayFilter": true
                        }
                    }
                ]
            }
        ],
        "methods": [
            {
                "action": {
                    "type": "hide",
                    "target": {
                        "selector": "#CI-consent-popup"
                    }
                },
                "name": "HIDE_CMP"
            },
            {
                "name": "OPEN_OPTIONS"
            },
            {
                "action": {
                    "type": "list",
                    "actions": [
                        {
                            "type": "consent",
                            "consents": [
                                {
                                    "matcher": {
                                        "type": "checkbox",
                                        "target": {
                                            "selector": "#cookie_cat_statistic"
                                        }
                                    },
                                    "toggleAction": {
                                        "type": "click",
                                        "target": {
                                            "selector": "#cookie_cat_statistic"
                                        }
                                    },
                                    "type": "B"
                                }
                            ]
                        },
                        {
                            "type": "consent",
                            "consents": [
                                {
                                    "matcher": {
                                        "type": "checkbox",
                                        "target": {
                                            "selector": "#cookie_cat_functional"
                                        }
                                    },
                                    "toggleAction": {
                                        "type": "click",
                                        "target": {
                                            "selector": "#cookie_cat_functional"
                                        }
                                    },
                                    "type": "A"
                                }
                            ]
                        },
                        {
                            "type": "consent",
                            "consents": [
                                {
                                    "matcher": {
                                        "type": "checkbox",
                                        "target": {
                                            "selector": "#cookie_cat_marketing"
                                        }
                                    },
                                    "toggleAction": {
                                        "type": "click",
                                        "target": {
                                            "selector": "#cookie_cat_marketing"
                                        }
                                    },
                                    "type": "F"
                                }
                            ]
                        }
                    ]
                },
                "name": "DO_CONSENT"
            },
            {
                "action": {
                    "type": "click",
                    "target": {
                        "selector": "#updateButton"
                    }
                },
                "name": "SAVE_CONSENT"
            },
            {
                "name": "UTILITY"
            }
        ]
    }
}