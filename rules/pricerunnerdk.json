{
  "$schema": "https://raw.githubusercontent.com/cavi-au/Consent-O-Matic/master/rules.schema.json",
  "pricerunnerdk": {
      "detectors": [
          {
              "presentMatcher": [
                  {
                      "type": "css",
                      "target": {
                          "selector": "#consent",
                          "textFilter": [
                              "Cookiepolitik",
                              "Cookiepolicy",
                              "Cookie policy"
                          ]
                      }
                  }
              ],
              "showingMatcher": [
                  {
                      "type": "css",
                      "target": {
                          "selector": "#consent",
                          "textFilter": [
                              "Cookiepolitik",
                              "Cookiepolicy",
                              "Cookie policy"
                          ],
                          "displayFilter": true
                      }
                  }
              ]
          }
      ],
      "methods": [
          {
              "action": {
                  "type": "list",
                  "actions": [
                      {
                          "type": "hide",
                          "target": {
                              "selector": "#consent"
                          }
                      },
                      {
                          "type": "hide",
                          "target": {
                              "selector": "[data-testid='contentmodal-backdrop']"
                          }
                      },
                      {
                          "type": "hide",
                          "target": {
                              "selector": ".vm5CX8hylh.VBA0yzXTNW.UiB_JlUat1"
                          }
                      },
                      {
                          "type": "hide",
                          "target": {
                              "selector": ".teGOym6Mts.bQBX2wGwEp"
                          }
                      }
                  ]
              },
              "name": "HIDE_CMP"
          },
          {
              "action": {
                  "type": "click",
                  "target": {
                      "selector": "#consent button",
                      "textFilter": [
                          "Indstillinger",
                          "Inställningar",
                          "Settings"
                      ]
                  }
              },
              "name": "OPEN_OPTIONS"
          },
          {
              "action": {
                  "type": "list",
                  "actions": [
                      {
                          "type": "consent",
                          "consents": [
                              {
                                  "matcher": {
                                      "type": "checkbox",
                                      "target": {
                                          "selector": "input[data-option-name='FUNCTIONAL']"
                                      }
                                  },
                                  "toggleAction": {
                                      "type": "click",
                                      "target": {
                                          "selector": "input[data-option-name='FUNCTIONAL']"
                                      }
                                  },
                                  "type": "A"
                              }
                          ]
                      },
                      {
                          "type": "consent",
                          "consents": [
                              {
                                  "matcher": {
                                      "type": "checkbox",
                                      "target": {
                                          "selector": "input[data-option-name='ANALYTICS']"
                                      }
                                  },
                                  "toggleAction": {
                                      "type": "click",
                                      "target": {
                                          "selector": "input[data-option-name='ANALYTICS']"
                                      }
                                  },
                                  "type": "B"
                              }
                          ]
                      },
                      {
                          "type": "consent",
                          "consents": [
                              {
                                  "matcher": {
                                      "type": "checkbox",
                                      "target": {
                                          "selector": "input[data-option-name='TARGETING']"
                                      }
                                  },
                                  "toggleAction": {
                                      "type": "click",
                                      "target": {
                                          "selector": "input[data-option-name='TARGETING']"
                                      }
                                  },
                                  "type": "B"
                              }
                          ]
                      }
                  ]
              },
              "name": "DO_CONSENT"
          },
          {
              "action": {
                  "type": "click",
                  "target": {
                      "selector": "div > div > div > div > div > div > button",
                      "textFilter": [
                          "Gem indstillinger",
                          "Spara inställningar",
                          "Save settings"
                      ]
                  }
              },
              "name": "SAVE_CONSENT"
          },
          {
              "name": "UTILITY"
          }
      ]
  }
}