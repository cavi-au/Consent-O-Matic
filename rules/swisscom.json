{
    "$schema": "https://raw.githubusercontent.com/cavi-au/Consent-O-Matic/master/rules.schema.json",
    "swisscom": {
        "detectors": [
            {
                "presentMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": ".modal__content.tealium-consent-popup"
                        }
                    }
                ],
                "showingMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": ".modal__content.tealium-consent-popup"
                        }
                    }
                ]
            }
        ],
        "methods": [
            {
                "action": {
                    "type": "list",
                    "actions": [
                        {
                            "type": "hide",
                            "target": {
                                "selector": ".sdx-modal-holder"
                            }
                        },
                        {
                            "type": "hide",
                            "target": {
                                "selector": ".backdrop.backdrop--open"
                            }
                        }
                    ]
                },
                "name": "HIDE_CMP"
            },
            {
                "action": {
                    "type": "click",
                    "target": {
                        "selector": ".button--responsive.button--secondary"
                    }
                },
                "name": "OPEN_OPTIONS"
            },
            {
                "action": {
                    "type": "consent",
                    "consents": [
                        {
                            "matcher": {
                                "type": "checkbox",
                                "target": {
                                    "selector": "#consent-01"
                                }
                            },
                            "toggleAction": {
                                "type": "click",
                                "target": {
                                    "selector": "#consent-01"
                                }
                            },
                            "type": "B"
                        },
                        {
                            "matcher": {
                                "type": "checkbox",
                                "target": {
                                    "selector": "#consent-06"
                                }
                            },
                            "toggleAction": {
                                "type": "click",
                                "target": {
                                    "selector": "#consent-06"
                                }
                            },
                            "type": "A"
                        },
                        {
                            "matcher": {
                                "type": "checkbox",
                                "target": {
                                    "selector": "#consent-07"
                                }
                            },
                            "toggleAction": {
                                "type": "click",
                                "target": {
                                    "selector": "#consent-07"
                                }
                            },
                            "type": "F"
                        },
                        {
                            "matcher": {
                                "type": "checkbox",
                                "target": {
                                    "selector": "#consent-15"
                                }
                            },
                            "toggleAction": {
                                "type": "click",
                                "target": {
                                    "selector": "#consent-15"
                                }
                            },
                            "type": "D"
                        }
                    ]
                },
                "name": "DO_CONSENT"
            },
            {
                "action": {
                    "type": "click",
                    "target": {
                        "selector": ".button--responsive.button--primary"
                    }
                },
                "name": "SAVE_CONSENT"
            },
            {
                "name": "UTILITY"
            }
        ]
    }
}