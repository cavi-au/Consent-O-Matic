                    ]
                },
                "name": "DO_CONSENT"
            },
            {
                "action": {
                    "type": "list",
                    "actions": [
                        {
                            "type": "click",
                            "target": {
                                "selector": "#cmpbox .cmpboxbtn.cmpboxbtnyes"
                            }
