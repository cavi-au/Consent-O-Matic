{
    "$schema": "https://raw.githubusercontent.com/cavi-au/Consent-O-Matic/master/rules.schema.json",
    "vue": {
        "detectors": [
            {
                "presentMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": ".cc_inner"
                        },
                        "parent": {
                            "selector": ".cc_main"
                        }
                    }
                ],
                "showingMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": ".cc_inner"
                        },
                        "parent": {
                            "selector": ".cc_main"
                        }
                    }
                ]
            }
        ],
        "methods": [
            {
                "name": "HIDE_CMP"
            },
            {
                "name": "OPEN_OPTIONS",
                "action": {
                    "type": "click",
                    "target": {
                        "selector": ".cc_inner .cc_buttons .button_outer"
                    },
                    "parent": {
                        "selector": ".cc_main"
                    }
                }
            },
            {
                "name": "DO_CONSENT"
            },
            {
                "name": "SAVE_CONSENT",
                "action": {
                    "type": "click",
                    "target": {
                        "selector": ".cc_inner .cc_buttons .button_outer .button_main"
                    },
                    "parent": {
                        "selector": ".cc_main"
                    }
                }
            },
            {
                "name": "UTILITY"
            }
        ]
    }
}
