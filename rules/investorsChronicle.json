{
    "$schema": "https://raw.githubusercontent.com/cavi-au/Consent-O-Matic/master/rules.schema.json",
    "investorsChronicle": {
        "detectors": [
            {
                "presentMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": ".cookie-banner .o-cookie-message .o-cookie-message--active, .consent-form__submit[data-trackable='manage-cookies-accept']"
                        }
                    }
                ],
                "showingMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": ".cookie-banner, .consent-form__submit",
                            "displayFilter": true
                        }
                    }
                ]
            }
        ],
        "methods": [
            {
                "name": "HIDE_CMP"
            },
            {
                "action": {
                    "type": "click",
                    "target": {
                        "selector": ".o-cookie-message__action .o-cookie-message__link"
                    }
                },
                "name": "OPEN_OPTIONS"
            },
            {
                "action": {
                    "type": "consent",
                    "consents": [
                        {
                            "matcher": {
                                "type": "onoff",
                                "onMatcher": {
                                    "target": {
                                        "selector": "#behaviouralAds-onsite-yes"
                                    }
                                },
                                "offMatcher": {
                                    "target": {
                                        "selector": "#behaviouralAds-onsite-no"
                                    }
                                }
                            },
                            "trueAction": {
                                "type": "click",
                                "target": {
                                    "selector": "#behaviouralAds-onsite-yes"
                                }
                            },
                            "falseAction": {
                                "type": "click",
                                "target": {
                                    "selector": "#behaviouralAds-onsite-no"
                                }
                            },
                            "type": "A"
                        }
                    ]
                },
                "name": "DO_CONSENT"
            },
            {
                "action": {
                    "type": "click",
                    "target": {
                        "selector": ".consent-form__submit"
                    }
                },
                "name": "SAVE_CONSENT"
            },
            {
                "name": "UTILITY"
            }
        ]
    }
}