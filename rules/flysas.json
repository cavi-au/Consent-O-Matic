{
    "$schema": "https://raw.githubusercontent.com/cavi-au/Consent-O-Matic/master/rules.schema.json",
    "SAS": {
        "detectors": [
            {
                "presentMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": "h2[aria-label='SAS & Cookies']"
                        }
                    }
                ],
                "showingMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": "h2[aria-label='SAS & Cookies']"
                        }
                    }
                ]
            }
        ],
        "methods": [
            {
                "name": "HIDE_CMP",
                "action": {
                    "type": "hide",
                    "target": {
                        "selector": "dialog.evvpf73"
                    }
                }
            },
            {
                "name": "OPEN_OPTIONS",
                "action": {
                    "type": "click",
                    "target": {
                        "selector": "div._1kyfr9o3 > button:first-child"
                    }
                }
            },
            {
                "name": "DO_CONSENT",
                "action": {
                    "type": "consent",
                    "consents": [
                        {
                            "type": "A",
                            "matcher": {
                                "type": "css",
                                "target": {
                                    "selector": "div._1kyfr9o7 > div._1kyfr9o9:nth-child(2) button[data-state='checked']"
                                }
                            },
                            "toggleAction": {
                                "type": "click",
                                "target": {
                                    "selector": "div._1kyfr9o7 > div._1kyfr9o9:nth-child(2) button"
                                }
                            }
                        },
                        {
                            "type": "B",
                            "matcher": {
                                "type": "css",
                                "target": {
                                    "selector": "div._1kyfr9o7 > div._1kyfr9o9:nth-child(3) button[data-state='checked']"
                                }
                            },
                            "toggleAction": {
                                "type": "click",
                                "target": {
                                    "selector": "div._1kyfr9o7 > div._1kyfr9o9:nth-child(3) button"
                                }
                            }
                        },
                        {
                            "type": "F",
                            "matcher": {
                                "type": "css",
                                "target": {
                                    "selector": "div._1kyfr9o7 > div._1kyfr9o9:nth-child(4) button[data-state='checked']"
                                }
                            },
                            "toggleAction": {
                                "type": "click",
                                "target": {
                                    "selector": "div._1kyfr9o7 > div._1kyfr9o9:nth-child(4) button"
                                }
                            }
                        }
                    ]
                }
            },
            {
                "name": "SAVE_CONSENT",
                "action": {
                    "type": "click",
                    "target": {
                        "selector": "div._1kyfr9o3 > button:first-child"
                    }
                }
            }
        ]
    }
}
