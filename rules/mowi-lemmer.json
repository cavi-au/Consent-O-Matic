{
    "$schema": "https://raw.githubusercontent.com/cavi-au/Consent-O-Matic/master/rules.schema.json",
    "mowi-lemmer": {
        "detectors": [
            {
                "presentMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": "div.strl-gdpr-cookiebar"
                        }
                    }
                ],
                "showingMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": "div.strl-gdpr-cookiebar"
                        }
                    }
                ]
            }
        ],
        "methods": [
            {
                "name": "HIDE_CMP"
            },
            {
                "name": "OPEN_OPTIONS"
            },
            {
                "action": {
                    "type": "foreach",
                    "target": {
                        "childFilter": {
                            "target": {
                                "selector": "input"
                            }
                        },
                        "selector": "div.strl-gdpr-cookiebar .flex"
                    },
                    "action": {
                        "type": "click",
                        "target": {
                            "selector": "input"
                        }
                    }
                },
                "name": "DO_CONSENT"
            },
            {
                "action": {
                    "type": "click",
                    "target": {
                        "selector": "div.strl-gdpr-cookiebar button.button"
                    }
                },
                "name": "SAVE_CONSENT"
            },
            {
                "name": "UTILITY"
            }
        ]
    }
}