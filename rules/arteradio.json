{
    "$schema": "https://raw.githubusercontent.com/cavi-au/Consent-O-Matic/master/rules.schema.json",
    "arteradio": {
        "detectors": [
            {
                "presentMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": ".modal__content .configure-policy"
                        }
                    }
                ],
                "showingMatcher": [
                    {
                        "type": "css",
                        "target": {
                            "selector": ".modal__content .configure-policy",
                            "displayFilter": true
                        }
                    }
                ]
            }
        ],
        "methods": [
            {
                "name": "HIDE_CMP"
            },
            {
                "action": {
                    "type": "click",
                    "target": {
                        "selector": ".configure-policy"
                    }
                },
                "name": "OPEN_OPTIONS"
            },
            {
                "action": {
                    "type": "consent",
                    "consents": [
                        {
                            "matcher": {
                                "type": "onoff",
                                "onMatcher": {
                                    "target": {
                                        "selector": "#swichana[data-value='off']"
                                    }
                                },
                                "offMatcher": {
                                    "target": {
                                        "selector": "#swichana[data-value='on']"
                                    }
                                }
                            },
                            "trueAction": {
                                "type": "click",
                                "target": {
                                    "selector": "#swichana_railoff"
                                }
                            },
                            "falseAction": {
                                "type": "click",
                                "target": {
                                    "selector": "#swichana_railon"
                                }
                            },
                            "type": "B"
                        },
                        {
                            "matcher": {
                                "type": "onoff",
                                "onMatcher": {
                                    "target": {
                                        "selector": "#swichrsx[data-value='off']"
                                    }
                                },
                                "offMatcher": {
                                    "target": {
                                        "selector": "#swichrsx[data-value='on']"
                                    }
                                }
                            },
                            "trueAction": {
                                "type": "click",
                                "target": {
                                    "selector": "#swichrsx_railoff"
                                }
                            },
                            "falseAction": {
                                "type": "click",
                                "target": {
                                    "selector": "#swichrsx_railon"
                                }
                            },
                            "type": "F"
                        }
                    ]
                },
                "name": "DO_CONSENT"
            },
            {
                "action": {
                    "type": "click",
                    "target": {
                        "selector": "[type='submit']",
                        "textFilter": [
                            "Valider mon choix"
                        ]
                    }
                },
                "name": "SAVE_CONSENT"
            },
            {
                "name": "UTILITY"
            }
        ]
    }
}
